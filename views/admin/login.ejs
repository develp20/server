<%- include("./inc/header.ejs") %>
    <div class="f-wrapper">
        <div class="box f-loginPanel is-centered">
            <img src="/assets/img/flip_logoDark.png" alt="flip" class="f-logo">
            <div class="field">
                <div class="control" style="margin-bottom: 10px;">
                    <input type="text" class="input f-email" placeholder="Email Address" />
                    <p class="help f-help f-emailHelp is-danger">This email is invalid.</p>
                </div>
                <div class="control" style="margin-bottom: 15px;">
                    <input type="password" class="input f-password" placeholder="Password" />
                    <p class="help f-help f-passwordHelp is-danger">This password is invalid.</p>
                </div>
                <div class="control">
                    <button class="button f-loginButton is-primary" onclick="f.login();">Login</button>
                    <p class="help f-help f-loginHelp is-danger">This password is invalid.</p>
                </div>
            </div>
        </div>
        <p class="f-loginTooltip">Something wrong? <a href="mailto:support@flip.wtf" target="_blank">Contact support</a>.</p>
    </div>
<%- include("./inc/footer.ejs") %>